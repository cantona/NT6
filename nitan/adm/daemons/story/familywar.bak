// story:familywar 門派挑畔

#include <ansi.h>
#include "/adm/etc/teamquest/faminfo.c" // 包含被攻打門派的所有信息

#define FAM                      fam_info[family]
#define WAITING                  1
#define ATTACKING                2
#define OVER                     3

string family;
string last_family;
int now_status                 = 2;
int stop                       = 0;

int no_clean_up() { return 1; }
void notify_npc();

public int change_status(int status) // 改變當前狀態
{
      if (status > 3 || status < 0)
               status = 3;

      return (now_status = status);
}

public int query_status() // 獲取當前狀態。外部quest.c調用
{
      return now_status;
}

public string set_family(string fam)
{
      
      return (family = fam);
}

void select_family()
{
        string* fams;
        string fam;        
        fams = keys(fam_info);
        
        // 保証不是上次出現過的門派
        while(1)
        {
              fam = fams[random(sizeof(fams))];
              if (fam != family)
              {
                     family = fam;
                     break;    
              }
        }
}       

string show_time()
{
        select_family();
        change_status(WAITING); // 等待調遣，暫不進攻和QUEST
        return "紛亂江湖，群雄逐鹿。武林中人都欲一統中原武林，成就一番霸業。";
}

string show_info(int i)
{
        string* msg = ({
             "神秘組織首領：聽說" + family + "在中原聲名顯赫，門徒眾多，" + FAM["master_name"] +
             "武功超卓，\n而" + FAM["skill"] + "更是威力驚人，不可小覷。",

