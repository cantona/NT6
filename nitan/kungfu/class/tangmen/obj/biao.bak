#include <ansi.h>
#include <weapon.h>
inherit THROWING;

void create()
{
        set_name(HIG "七子剛鏢" NOR, ({"qizi gangbiao"}));
        if (clonep())
                set_default_object(__FILE__);
        else
        {
                set("long", "這是一枚四川唐門秘制的剛鏢，威力無比。\n");
                set("unit", "些");
                set("base_value", 2100);
                set("material", "steel");
                set("base_unit", "枚");
                set("base_weight", 10);
        }
        set_amount(1);
        init_throwing(100);
        setup();
}
