#include <ansi.h>
inherit F_SSERVER;
#define PNAME "「隨緣三劍」"
mapping *msg = ({
([        "action":"$N使出隨緣三劍中第一招「劍掃長虹」，$w幽靈般陡然刺向$n$l",
        "damage": 270,
        "force" : 200,
        "damage_type": "刺傷",
]),
([        "action": "$N使出隨緣三劍中第二招「劍轉乾坤」，$w幻出一道紫光刺向$n$l",
        "damage": 290,
        "force" : 260,
        "damage_type": "刺傷",
]),
([        "action":"$N使出隨緣三劍中第三招「劍霸天下」，人影和著劍光風一般擊向$n",
        "damage": 330,
        "force" : 300,
        "damage_type": "刺傷",
]),
});

int perform(object me, object target)
{
        object weapon;
        int i, damage, lvl;
        int flag;
        string fskill,sskill,bskill,pfname,pskill;

        sskill = explode(__FILE__,"/")[<2];
        pfname = explode(__FILE__,"/")[<1][0..<3];
  if (userp(me) && !wizardp(me) &&
   !query("perform/"+pfname, me) && 
   !query("can_perform/"+sskill+"/"+pfname, me) && 
   !query_temp("murong/xingyi", me) && 
   !SCBORN_D->valid_perform(me,sskill,pfname))
   return notify_fail("你所使用的外功中沒有這種功能。\n");

        if( !objectp(target) ) {flag =1;target = offensive_target(me);}
        
        if( !target || !target->is_character() || target == me ||        
                  !me->is_fighting(target) ||
          !living(target) || query_temp("noliving", target) )
                return notify_fail(PNAME"只能對戰鬥中的對手使用。\n");
                
        if( !objectp(weapon=query_temp("weapon", me)) || 
                query("skill_type", weapon) != "sword" )
                return notify_fail("你使用的武器不對。\n");

        fskill = "hanbing-zhenqi";
        bskill = "sword";
        if (SCBORN_D->valid_perform(me,sskill,pfname))
                fskill = me->query_skill_mapped("force");
        if( query_temp("murong/xingyi", me) )
        {
                sskill = "douzhuan-xingyi";
                fskill = "shenyuan-gong";
                bskill = "parry";
        }

        if( (int)me->query_skill(fskill, 1) < 60 )
                return notify_fail("你的"+to_chinese(fskill)+"修為還不夠高，無法使用"+PNAME+"。\n");

        if( (int)me->query_skill(sskill, 1) < 50 )
                return notify_fail("你的"+to_chinese(sskill)+"還不夠高，無法使用"+PNAME+"。\n");

        if( query("max_neili", me)<100 )
                return notify_fail("你的內力修為不夠，無法使「隨緣三劍」。\n");

        if( query("neili", me)<50 )
                return notify_fail("你的內力不夠，無法使「隨緣三劍」。\n");

        if(target->is_busy())
                return notify_fail(target->name()+"目前正自顧不暇，放膽攻擊吧！\n");


        lvl = me->query_skill(bskill, 1);
        me->start_busy(1);

        damage = lvl / 2;
        addn_temp("apply/attack", lvl, me);
        addn_temp("apply/damage", damage, me);
        for(i=0;i<3;i++)
        {
                if (flag == 1) target = offensive_target(me);
                if (!objectp(target)) break;
                set_temp("no_reset_action", 1, me);
                set("actions", msg[i], me);
                COMBAT_D->do_attack(me, target, weapon);
        }
        delete_temp("no_reset_action", me);
        me->reset_action();
        me->receive_damage("qi", damage / 2);
        addn_temp("apply/attack", -lvl, me);
        addn_temp("apply/damage", -damage, me);

        return 1;
}

string name() {return replace_string(replace_string(PNAME,"「",""),"」","");}

int help(object me)
{
        write(WHT"\n"+to_chinese(explode(__FILE__,"/")[<2])+"之"+name()+WHT"："NOR"\n");
        write(@HELP

        使用功效：
                出手隨緣三劍

        出手要求：
                寒冰真氣60級
                嵩山劍法50級
                內力修為100
                內力50
HELP
        );
        return 1;
}
