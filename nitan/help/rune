$HIW$
rune20 + rune20 + putizi     = rune21
rune21 + rune21 + jiuzhuan   = rune22
rune22 + rune22 + tianxiang  = rune23
rune23 + rune23 + xuanhuang  = rune24
rune24 + rune24 + feicui lan = rune25
rune25 + rune25 + god blood  = rune26
rune26 + rune26 + ftopaz     = rune27
rune27 + rune27 + fruby      = rune28
rune28 + rune28 + fsapphire  = rune29
rune29 + rune29 + femerald   = rune30
rune30 + rune30 + fdiamond   = rune31
rune31 + rune31 + mtopaz     = rune32
rune32 + rune32 + mruby      = rune33
rune33 + rune33 + msapphire  = rune34
rune34 + rune34 + memerald   = rune35
rune35 + rune35 + mdiamond   = rune36

